@model nasga.me.Models.PersonalRecordsViewModel
<h2>Athlete Records</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@Model.FirstName @Model.LastName - @Model.Class</h3>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <tr>
                    <th>Year</th>
                    @foreach (var year in Model.Years)
                    {
                        <th>@year</th>
                    }
                </tr>
                <tr>
                    <td class="throw-label">Rank</td>
                    @foreach (var rank in Model.Ranks)
                    {
                        <td>@rank</td>
                    }
                </tr>
                <tr>
                    <td class="throw-label">Braemar</td>
                    @foreach (var braemar in Model.BraemarEvents)
                    {
                        <td>@braemar.Throw</td>
                    }
                </tr>
                <tr>
                    <td class="throw-label">Open</td>
                    @foreach (var open in Model.OpenEvents)
                    {
                        <td>@open.Throw</td>
                    }
                </tr>
                <tr>
                    <td class="throw-label">HWFD</td>
                    @foreach (var heavy in Model.HeavyEvents)
                    {
                        <td>@heavy.Throw</td>
                    }
                </tr>
                <tr>
                    <td class="throw-label">LWFD</td>
                    @foreach (var light in Model.LightEvents)
                    {
                        <td>@light.Throw</td>
                    }
                </tr>
                <tr>
                    <td class="throw-label">HH</td>
                    @foreach (var heavyHammer in Model.HeavyHammerEvents)
                    {
                        <td>@heavyHammer.Throw</td>
                    }
                </tr>
                <tr>
                    <td class="throw-label">LH</td>
                    @foreach (var lightHammer in Model.LightHammerEvents)
                    {
                        <td>@lightHammer.Throw</td>
                    }
                </tr>
                <tr>
                    <td class="throw-label">Caber</td>
                    @foreach (var caber in Model.CaberEvents)
                    {
                        <td>@caber.Throw</td>
                    }
                </tr>
                <tr>
                    <td class="throw-label">Sheaf</td>
                    @foreach (var sheaf in Model.SheafEvents)
                    {
                        <td>@sheaf.Throw</td>
                    }
                </tr>
                <tr>
                    <td class="throw-label">WFH</td>
                    @foreach (var wfh in Model.WfhEvents)
                    {
                        <td>@wfh.Throw</td>
                    }
                </tr>
            </table>
        </div>
    </div>
</div>

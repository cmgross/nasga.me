@model nasga.me.Models.SearchViewModel
<h1>Search</h1>

@using (Html.BeginForm("Index", "Search", FormMethod.Post, new { id = "searchForm", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.AthleteClass, new { @for = "AthleteClass" })
        @Html.DropDownListFor(m => m.AthleteClass, Model.Classes, new { @id = "AthleteClass", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Year, new { @for = "AthleteClass" })
        @Html.DropDownListFor(m => m.Year, Model.Years, new { @id = "Year", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @for = "Name" })
        @Html.TextBoxFor(m => m.Name, new { @id = "Name", @class = "form-control", @placeholder = "Enter athlete name", @data_provide = "typeahead", @autocomplete = "off" })
        <p class="help-block">Please format the name exactly as it appears on nasgaweb.com in FirstName LastName format.</p>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
}
@section Scripts {

}
@model nasga.me.App_Start.AthleteResponse
<h2>Personal Records</h2>
<h3>
    @Model.FirstName @Model.LastName
</h3>
<h4>
    @Model.Class
</h4>
<br<br />
<div>
    <div style="display: inline-block; text-align: left; font-weight: bold; margin-right: 20px;">
        Year<br/>
        Rank<br/>
        Braemar<br/>
        Open<br />
        HWFD<br />
        LWFD<br />
        HH<br />
        LH<br />
        Caber<br />
        Sheaf<br />
        WFH<br />
    </div>
    @foreach (var record in Model.Records.OrderByDescending(c => c.Year))
        {
        <div style="display: inline-block; text-align: center; margin-left: 20px;">
            @record.Year <br/>
            @record.Rank <br/>
            @record.Braemar.Throw<br/>
            @record.Open.Throw<br/>
            @record.Heavy.Throw<br/>
            @record.Light.Throw<br />
            @record.Heavy.Throw<br/>
            @record.Light.Throw<br/>
            @record.Caber.Throw<br/>
            @record.Sheaf.Throw<br/>
            @record.Wfh.Throw<br/>
        </div>
        }
</div>